{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*-pentest*.ts",
    "*-audit*.ts",
    "*-exploit*.ts",
    "final-security-check.ts",
    "professional-security-audit.ts",
    "ultimate-security-audit.ts",
    "business-logic-*.ts",
    "load-testing*.ts",
    "chaos-engineering*.ts",
    "file-upload-security*.ts",
    "race-condition*.ts"
  ]
}
